{
  "name": "cloudflare-saas-stack",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.1.0",
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "bunx @cloudflare/next-on-pages",
    "preview": "bun run pages:build && wrangler pages dev",
    "deploy": "bun run pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "deploy:full": "bun run lint && bun run db:migrate:prod && bun run pages:build && wrangler pages deploy",
    "deploy:staging": "bun run pages:build && wrangler pages deploy --env staging",
    "ci:build": "bun run lint && bun run pages:build",
    "ci:deploy": "bun run db:migrate:prod && wrangler pages deploy",
    "setup": "bunx tsx scripts/setup.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production drizzle-kit migrate",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio",
    "studio:start": "drizzle-kit studio > /dev/null 2>&1 & echo $! > .studio.pid && echo 'Drizzle Studio started at https://local.drizzle.studio'",
    "studio:stop": "if [ -f .studio.pid ]; then kill $(cat .studio.pid) && rm .studio.pid && echo 'Drizzle Studio stopped'; else echo 'Drizzle Studio is not running'; fi",
    "studio:restart": "bun run studio:stop && bun run studio:start",
    "db:query": "bunx wrangler d1 execute atenra-dev-db --local --command",
    "db:query:prod": "bunx wrangler d1 execute atenra-dev-db --command"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.10.0",
    "@clack/prompts": "^0.11.0",
    "@iarna/toml": "^2.2.5",
    "@libsql/client": "^0.10.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.438.0",
    "next": "14.2.5",
    "next-auth": "^5.0.0-beta.29",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.15",
    "@cloudflare/workers-types": "^4.20240903.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "7.13.1",
    "@typescript-eslint/parser": "7.13.1",
    "braces": "^3.0.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-next-on-pages": "^1.13.2",
    "eslint-plugin-react": "7.35.0",
    "fill-range": "^7.1.1",
    "micromatch": "^4.0.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "5.4.5",
    "vercel": "^37.3.0",
    "wrangler": "^4.33.1"
  }
}
